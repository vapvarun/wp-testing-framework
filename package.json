{
  "name": "wp-testing-framework",
  "version": "3.0.0",
  "description": "Universal WordPress Testing Framework - BuddyPress Tests",
  "private": true,
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "./vendor/bin/phpunit -c phpunit-unit.xml",
    "test:integration": "./vendor/bin/phpunit -c phpunit.xml",
    "test:functional": "./vendor/bin/phpunit --testsuite functional",
    "test:e2e": "playwright test --config=tools/e2e/playwright.config.ts",
    "test:security": "playwright test --config=tools/e2e/playwright.config.ts tools/e2e/tests/security.spec.ts",
    "test:performance": "playwright test --config=tools/e2e/playwright.config.ts tools/e2e/tests/performance.spec.ts",
    "test:accessibility": "playwright test --config=tools/e2e/playwright.config.ts tools/e2e/tests/accessibility.spec.ts",
    "coverage:report": "php tools/test-coverage-report.php",
    "test:full": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security && npm run test:performance && npm run test:accessibility",
    "e2e": "playwright test --config=tools/e2e/playwright.config.ts",
    "e2e:ui": "playwright test --config=tools/e2e/playwright.config.ts --ui",
    "e2e:update": "playwright test --config=tools/e2e/playwright.config.ts --update-snapshots",
    "setup": "npm install && composer install && npx playwright install",
    "clean": "rm -rf workspace/* reports/*/execution/* coverage/* .phpunit.cache test-results playwright-report",
    "clean:all": "npm run clean && rm -rf node_modules vendor",
    "clean:workspace": "rm -rf workspace/*",
    "clean:reports": "rm -rf reports/*/execution/* reports/*/api/* reports/*/security/* reports/*/performance/*",
    "clean:coverage": "rm -rf coverage/*",
    "universal:buddypress": "node tools/universal-workflow.mjs --plugin buddypress --action full --scan-dir ../wp-content/uploads/wbcom-scan",
    "universal:woocommerce": "node tools/universal-workflow.mjs --plugin woocommerce --action full --scan-dir ../wp-content/uploads/wbcom-scan",
    "universal:contact-form-7": "node tools/universal-workflow.mjs --plugin contact-form-7 --action full --scan-dir ../wp-content/uploads/wbcom-scan",
    "universal:yoast": "node tools/universal-workflow.mjs --plugin wordpress-seo --action full --scan-dir ../wp-content/uploads/wbcom-scan",
    "universal:jetpack": "node tools/universal-workflow.mjs --plugin jetpack --action full --scan-dir ../wp-content/uploads/wbcom-scan",
    "universal:bbpress": "node tools/universal-workflow.mjs --plugin bbpress --action full --scan-dir ../wp-content/uploads/wbcom-scan",
    "test:buddypress:unit": "./vendor/bin/phpunit plugins/buddypress/tests/unit/",
    "test:buddypress:integration": "./vendor/bin/phpunit plugins/buddypress/tests/integration/",
    "test:buddypress:security": "./vendor/bin/phpunit plugins/buddypress/tests/security/",
    "test:buddypress:ux": "./vendor/bin/phpunit src/Framework/Tests/UX/ --filter=BuddyPress",
    "test:buddypress:modern": "./vendor/bin/phpunit src/Framework/Tests/Modern/ --filter=BuddyPress",
    "test:buddypress:all": "npm run test:buddypress:unit && npm run test:buddypress:integration && npm run test:buddypress:security",
    "report:buddypress": "node tools/ai/ai-optimized-reporter.mjs --plugin buddypress",
    "coverage:buddypress": "php tools/test-coverage-report.php --plugin buddypress",
    "security:buddypress": "php tools/security-scanner.php --plugin buddypress",
    "performance:buddypress": "php tools/performance-profiler.php --plugin buddypress",
    "test:bbpress:unit": "./vendor/bin/phpunit plugins/bbpress/tests/unit/",
    "test:bbpress:integration": "./vendor/bin/phpunit plugins/bbpress/tests/integration/",
    "test:bbpress:security": "./vendor/bin/phpunit plugins/bbpress/tests/security/",
    "test:bbpress:all": "npm run test:bbpress:unit && npm run test:bbpress:integration && npm run test:bbpress:security",
    "report:bbpress": "node tools/ai/ai-optimized-reporter.mjs --plugin bbpress",
    "coverage:bbpress": "php tools/test-coverage-report.php --plugin bbpress",
    "security:bbpress": "php tools/security-scanner.php --plugin bbpress",
    "performance:bbpress": "php tools/performance-profiler.php --plugin bbpress",
    "analyze:functionality": "node tools/ai/functionality-analyzer.mjs",
    "analyze:customer": "node tools/ai/customer-value-analyzer.mjs",
    "generate:tests": "node tools/ai/universal-test-generator.mjs",
    "check:compatibility": "node tools/ai/compatibility-checker.mjs",
    "test:scenario": "node tools/ai/scenario-test-executor.mjs"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.46.0",
    "@types/node": "^20.0.0",
    "backstopjs": "^6.3.25",
    "cypress": "^13.0.0",
    "dotenv": "^17.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
