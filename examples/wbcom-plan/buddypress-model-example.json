{
  "plugin": "buddypress",
  "version": "15.0.0",
  "last_updated": "2024-08-23",
  "scenarios": [
    {
      "name": "User Registration Flow",
      "type": "functionality",
      "steps": [
        "Navigate to registration page",
        "Fill registration form",
        "Submit registration",
        "Verify account activation email",
        "Activate account",
        "Verify user can login"
      ],
      "expected_results": {
        "user_created": true,
        "activation_email_sent": true,
        "profile_created": true,
        "default_friends": 0,
        "default_groups": 0
      },
      "common_issues": [
        "Email not sent",
        "Activation link expired",
        "Profile fields not saved"
      ]
    },
    {
      "name": "Activity Stream Posting",
      "type": "functionality",
      "steps": [
        "Login as user",
        "Navigate to activity stream",
        "Post activity update",
        "Verify activity appears in stream",
        "Check activity privacy settings",
        "Test mentions and hashtags"
      ],
      "expected_results": {
        "activity_posted": true,
        "visible_in_stream": true,
        "mentions_linked": true,
        "hashtags_linked": false
      }
    },
    {
      "name": "Group Creation and Management",
      "type": "functionality",
      "steps": [
        "Create new group",
        "Set group privacy",
        "Invite members",
        "Post in group",
        "Manage group settings",
        "Delete group"
      ],
      "expected_results": {
        "group_created": true,
        "invites_sent": true,
        "posts_visible": true,
        "settings_saved": true
      }
    },
    {
      "name": "Private Messaging",
      "type": "functionality",
      "steps": [
        "Compose new message",
        "Select recipients",
        "Send message",
        "Verify delivery",
        "Test reply",
        "Test delete"
      ],
      "expected_results": {
        "message_sent": true,
        "notification_sent": true,
        "reply_works": true,
        "delete_works": true
      }
    },
    {
      "name": "Friend Connections",
      "type": "functionality",
      "steps": [
        "Send friend request",
        "Receive notification",
        "Accept/Reject request",
        "Verify friendship",
        "Remove friend"
      ],
      "expected_results": {
        "request_sent": true,
        "notification_received": true,
        "friendship_established": true,
        "unfriend_works": true
      }
    }
  ],
  "successfulPatterns": [
    {
      "pattern": "User registration with email verification",
      "success_rate": 0.95,
      "conditions": ["SMTP configured", "Activation enabled"]
    },
    {
      "pattern": "Activity stream real-time updates",
      "success_rate": 0.88,
      "conditions": ["Heartbeat API enabled", "AJAX enabled"]
    }
  ],
  "failurePatterns": [
    {
      "pattern": "Email delivery failures",
      "frequency": 0.15,
      "cause": "SMTP misconfiguration",
      "fix": "Configure wp_mail or use SMTP plugin"
    },
    {
      "pattern": "Profile field validation errors",
      "frequency": 0.08,
      "cause": "Required fields not marked",
      "fix": "Update XProfile field settings"
    }
  ],
  "performanceMetrics": {
    "activity_load_time": {
      "optimal": "< 500ms",
      "acceptable": "< 1000ms",
      "slow": "> 2000ms"
    },
    "member_directory_load": {
      "optimal": "< 800ms",
      "acceptable": "< 1500ms",
      "slow": "> 3000ms"
    }
  },
  "securityChecks": [
    {
      "check": "SQL Injection in activity queries",
      "vulnerability": false,
      "test_method": "parameterized_queries"
    },
    {
      "check": "XSS in user-generated content",
      "vulnerability": false,
      "test_method": "content_filtering"
    },
    {
      "check": "CSRF in friend requests",
      "vulnerability": false,
      "test_method": "nonce_verification"
    }
  ],
  "dataPatterns": {
    "user_generation": {
      "min_users": 10,
      "max_users": 1000,
      "user_types": ["regular", "moderator", "admin"],
