# WordPress Testing Framework .gitignore

# Dependencies (these are installed locally via setup.sh)
node_modules/
vendor/

# IDE and OS files
.DS_Store
Thumbs.db
.idea/
.vscode/
*.swp
*.swo
*~
.project
.settings/

# Test outputs and reports
coverage/
test-results/
playwright-report/
.phpunit.cache/
.phpunit.result.cache
*.log
workflow.log

# Build artifacts
dist/
build/
*.zip

# Environment files
.env
.env.local
.env.*.local

# Temporary files
tmp/
temp/
*.tmp
*.bak
*.backup

# Cache files
.cache/
*.cache

# Test execution artifacts
reports/execution/*.json
reports/execution/*.html
reports/ai-analysis/*-execution-*.md

# Local configuration overrides
config.local.json
phpunit.local.xml

# Generated test data (can be regenerated)
tests/generated/*/plugin-analysis.json
tests/generated/*/test-data.json

# Screenshots and videos from E2E tests
tests/e2e/screenshots/
tests/e2e/videos/
tests/**/*.png
tests/**/*.mp4
tests/**/*.webm

# Cypress specific
cypress/screenshots/
cypress/videos/
cypress/downloads/

# Local bin wrappers (generated by setup.sh)
bin/phpunit
bin/test

# Lock files (debatable - keeping for consistency)
# Uncomment if you want to ignore lock files
# package-lock.json
# composer.lock

# WordPress specific (shouldn't be in testing framework)
wp-config.php
wp-content/uploads/
wp-content/upgrade/
wp-content/backup*/

# Keep these directories but ignore contents
reports/execution/.gitkeep
coverage/.gitkeep
test-results/.gitkeep